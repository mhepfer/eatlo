<h1> Restaurants</h1>
<ul>
<% restaurants.each(function(restaurant){ %>
	<li>
		<a href="#/restaurants/<%= restaurant.id %>" class="restaurant"><%=restaurant.escape("name")%>
		</a>
		<br>
	<button id="delete" class="btn btn-danger" data-id="<%= restaurant.id %>">Delete!</button>
  <a href="#/restaurants/<%= restaurant.id %>/edit">Edit</a>
	</li>
<%	}) %>
</ul>

<a href="#/restaurants/new" id="add" >Add a Restaurant</a>